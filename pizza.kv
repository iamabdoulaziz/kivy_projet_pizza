#:import utils kivy.utils
#: set color1 "#dd7835"
#: set color2 "#c8c8c8"

MainWidget:

<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(16)

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"

    canvas.before:
        Color:
            # rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)

    canvas.before:
        Rectangle:
            source: "images/badge.png"
            pos: self.pos
            size: self.size

<PizzaWidget>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.name
                font_size: dp(22)
                bold: True
            Badge:
                text: "VEGETARIENNE" if root.vegetarian else ""
        LeftAlignLabel:
            text: root.ingredients
            color: utils.get_color_from_hex(color2)
    Label:
        text: str(root.price) + "euros"
        text_size: self.size
        font_size: dp(20)
        color: utils.get_color_from_hex(color1)
        #### dd7835
        halign: "right"
        valign: "center"

