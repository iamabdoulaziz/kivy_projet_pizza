#:import utils kivy.utils

MainWidget:

<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"

    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<PizzaWidget>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.name
            FitLabel:
                text: "VEGETARIENNE" if root.vegetarian else ""
        LeftAlignLabel:
            text: root.ingredients
    Label:
        text: str(root.price) + "euros"
        text_size: self.size
        halign: "right"
        valign: "center"

